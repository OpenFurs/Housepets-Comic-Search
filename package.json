{
  "name": "searchpets",
  "author": {
    "name": "openfurs"
  },
  "private": true,
  "workspaces": [
    "searchpets-v2-next"
  ],
  "scripts": {
    "reset:next": "rm -rf app/node_modules app/yarn.lock app/package-lock.json && yarn --cwd ./app install",
    "dev": "concurrently -n tsc,next,python -k \"npm run tsc:watch\" \"npm run dev:next\"  \"npm run dev:server\"",
    "build": "concurrently -n next,python -c bgBlack,bgBlue.yellow -k \"yarn --cwd ./app build\" \"yarn build:server\"",
    "dev:server": "cd server && python app.py",
    "build:server": "cd server && python app.py --build",
    "dev:next": "concurrently -n next,tsc -c bgBlack,bgBlue.white -k \"yarn --cwd ./app dev\" \"yarn tsc:watch\"",
    "tsc:watch": "yarn --cwd ./app tsc --preserveWatchOutput --watch --noEmit",
    "start:next": "yarn --cwd ./app start",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/openfurs/searchpets.git"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "husky": "^8.0.0"
  },
  "license": "GPL-2.0"
}
